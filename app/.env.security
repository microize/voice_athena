# Security Configuration Template
# Copy this to .env and customize for your environment

# Session Security
SESSION_SECRET_KEY=your-super-secure-32-byte-key-change-this-immediately
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=900
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# User Credentials (CHANGE THESE!)
ADMIN_PASSWORD=YourSecureAdminPassword123!@#
DEMO_PASSWORD=YourSecureDemoPassword456!@#

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8004,http://127.0.0.1:8004

# API Keys (Add your actual keys)
OPENAI_API_KEY=your-openai-api-key-here
JUDGE0_API_KEY=your-judge0-api-key-here
RAPIDAPI_KEY=your-rapidapi-key-here

# Database
DB_PATH=data/interview_sessions.db

# Server Configuration
HOST=0.0.0.0
PORT=8004
DEBUG=false
LOG_LEVEL=INFO

# Security Headers
CSP_REPORT_URI=/csp-report